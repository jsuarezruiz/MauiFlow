<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiFlow.Converters"
             xmlns:local="clr-namespace:MauiFlow"
             x:Class="MauiFlow.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Light Theme Colors -->
            <Color x:Key="PrimaryPurpleLight">#8B5FBF</Color>
            <Color x:Key="PrimaryOrangeLight">#D4A574</Color>
            <Color x:Key="PrimaryBlueLight">#4A90E2</Color>
            <Color x:Key="SidebarBackgroundLight">#F8F9FA</Color>
            <Color x:Key="SelectedItemBackgroundLight">#E8E4F3</Color>
            <Color x:Key="TextPrimaryLight">#2D3748</Color>
            <Color x:Key="TextSecondaryLight">#718096</Color>
            <Color x:Key="BorderColorLight">#E2E8F0</Color>
            <Color x:Key="HoverBackgroundLight">#F7FAFC</Color>
            <Color x:Key="InputBackgroundLight">#FAFBFC</Color>
            <Color x:Key="CardBackgroundLight">#FFFFFF</Color>
            <Color x:Key="SuccessColorLight">#28A745</Color>
            <Color x:Key="ErrorColorLight">#DC3545</Color>
            <Color x:Key="WarningColorLight">#FFC107</Color>

            <!-- Dark Theme Colors -->
            <Color x:Key="PrimaryPurpleDark">#9D6FD4</Color>
            <Color x:Key="PrimaryOrangeDark">#E6B887</Color>
            <Color x:Key="PrimaryBlueDark">#5BA3F5</Color>
            <Color x:Key="SidebarBackgroundDark">#1E1E2E</Color>
            <Color x:Key="SelectedItemBackgroundDark">#2A2A3E</Color>
            <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
            <Color x:Key="TextSecondaryDark">#A0A0B0</Color>
            <Color x:Key="BorderColorDark">#3A3A4A</Color>
            <Color x:Key="HoverBackgroundDark">#2A2A3A</Color>
            <Color x:Key="InputBackgroundDark">#2A2A3A</Color>
            <Color x:Key="CardBackgroundDark">#1A1A2A</Color>
            <Color x:Key="SuccessColorDark">#198754</Color>
            <Color x:Key="ErrorColorDark">#C82333</Color>
            <Color x:Key="WarningColorDark">#E0A800</Color>

            <!-- Current Theme Colors -->
            <Color x:Key="PrimaryPurple">#8B5FBF</Color>
            <Color x:Key="PrimaryOrange">#D4A574</Color>
            <Color x:Key="PrimaryBlue">#4A90E2</Color>
            <Color x:Key="SidebarBackground">#F8F9FA</Color>
            <Color x:Key="SelectedItemBackground">#E8E4F3</Color>
            <Color x:Key="TextPrimary">#2D3748</Color>
            <Color x:Key="TextSecondary">#718096</Color>
            <Color x:Key="BorderColor">#E2E8F0</Color>
            <Color x:Key="HoverBackground">#F7FAFC</Color>
            <Color x:Key="InputBackground">#FAFBFC</Color>
            <Color x:Key="CardBackground">#FFFFFF</Color>

            <!-- Converters -->
            <converters:ContentToBoolConverter x:Key="ContentToBoolConverter"/>
            <converters:ContentToInvertedBoolConverter x:Key="ContentToInvertedBoolConverter"/>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:LineCountConverter x:Key="LineCountConverter"/>
            <converters:ThemeToThemeOptionConverter x:Key="ThemeToThemeOptionConverter"/>

            <!-- Button Styles -->
            <Style TargetType="Button">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="1"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.75"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryPurpleLight}, Dark={StaticResource PrimaryPurpleDark}}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontFamily" Value="OpenSansSemibold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource PrimaryPurpleLight}, Dark={StaticResource PrimaryPurpleDark}}"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource PrimaryPurpleLight}, Dark={StaticResource PrimaryPurpleDark}}"/>
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="CornerRadius" Value="6"/>
            </Style>

            <!-- Alert Styles -->
            <Style x:Key="ErrorAlertStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ErrorColorLight}, Dark={StaticResource ErrorColorDark}}"/>
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="16,8"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style x:Key="SuccessAlertStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SuccessColorLight}, Dark={StaticResource SuccessColorDark}}"/>
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="16,8"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style x:Key="StatusAlertStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryBlueLight}, Dark={StaticResource PrimaryBlueDark}}"/>
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="16,8"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <!-- Other Styles -->
            <Style x:Key="AppItemBorderStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="8,2"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
                <Setter Property="Stroke" Value="Transparent"/>
            </Style>

            <Style x:Key="SelectedAppItemBorderStyle" TargetType="Border" BasedOn="{StaticResource AppItemBorderStyle}">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SelectedItemBackgroundLight}, Dark={StaticResource SelectedItemBackgroundDark}}"/>
            </Style>

            <Style x:Key="NavIconBorderStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Margin" Value="16,12,16,0"/>
                <Setter Property="Stroke" Value="Transparent"/>
            </Style>

            <Style x:Key="WindowControlStyle" TargetType="Ellipse">
                <Setter Property="WidthRequest" Value="12"/>
                <Setter Property="HeightRequest" Value="12"/>
                <Setter Property="Margin" Value="4,0"/>
            </Style>

            <Style x:Key="IconButtonStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
            </Style>

            <Style x:Key="TabButtonStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
            </Style>

            <!-- Loading Animation Style -->
            <Style x:Key="LoadingSpinnerStyle" TargetType="ActivityIndicator">
                <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource PrimaryPurpleLight}, Dark={StaticResource PrimaryPurpleDark}}"/>
                <Setter Property="WidthRequest" Value="40"/>
                <Setter Property="HeightRequest" Value="40"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
